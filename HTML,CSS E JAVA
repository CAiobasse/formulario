JAVA

function validar() {
    let login = document.getElementById('nome').value;
    let senha = document.getElementById('senha').value;


    let loginValido = /^[13579]{5}$/.test(login);
    let senhaValida = /^[02468]{4}$/.test(senha);

    if (loginValido && senhaValida) {
        alert('login e senha válidos!');
    } else{
        alert('login ou senha inválidos!\n\nLembre-se: \n- O login deve conter cinco caracter');
    } 
}
